{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
        "fileMatch": [
          ".+\\.(yaml)|(yml)$"
        ],
        "matchStrings": [
          "version: \"(?<currentValue>.*)\"[ \t]*#[ \t]*renovate: glasskube"
        ],
        "datasourceTemplate": "glasskube-packages",
        "versioningTemplate": "glasskube",
        "depNameTemplate": "glasskube/packages"
    },
  ]
}
